#version 450
#define cx_mul(a, b) vec2((a.x * b.x) - (a.y * b.y), (a.x * b.y) + (a.y * b.x))

layout(std430, set=0, binding=0) readonly buffer uhh { vec2 ks[]; };

layout(std430, set=0, binding=1) buffer Out { vec2 vout[];};

layout(local_size_x=32, local_size_y=1, local_size_z=1) in;

void main() {
    uint i = gl_GlobalInvocationID.x;

    vout[i] = cx_mul(ks[i], vout[i]);
}
